<Window x:Class="ApplicationSettings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationSettings"
        
        xmlns:Properties="clr-namespace:ApplicationSettings.Properties"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">

    <!-- The below can only work if 
    "xmlns:Properties="clr-namespace:ApplicationSettings.Properties"
    has been added like it has been in line 8 -->
    <Window.DataContext>
        <Properties:Settings/>
    </Window.DataContext>
    
    <Grid>
        
        <!-- UserSetText can be found/new variables can be added in Settings.settings
        which can be found in properties
        (write it out in Settings.cs not in Settings.Designer.cs 
        because Settings.Designer.cs is automatically written based off whats
        written in Settings.settings)-->

        <TextBox x:Name="txtBoxUserInput" Text="{Binding UserSetText}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Height="200" Width="280"/>
    </Grid>
</Window>
